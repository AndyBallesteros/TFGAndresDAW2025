{
  "builds": [
    {
      "src": "api/*.js",
      "use": "@vercel/node@latest"
    },
    {
        "src": "package.json",
        "use": "@vercel/angular@latest",
        "config": {
            "angularApp": "pea-frontend" 
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)", 
      "dest": "/index.html" 
    }
  ]
}
